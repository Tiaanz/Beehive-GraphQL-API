generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Reliever {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  first_name String
  last_name  String
  phone      String
  email      String   @unique
  password   String
  bio        String?
  photo_url  String?
  role       Role
  jobIDs     String[] @db.ObjectId
  jobs       Job[]    @relation(fields: [jobIDs], references: [id])
}

model Manager {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  first_name String
  last_name  String
  phone      String
  email      String  @unique
  password   String
  role       Role
  ECE_id     Int     @unique
  center     Center?
}

model Center {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  ECE_id      Int      @unique
  manager     Manager? @relation(fields: [ECE_id], references: [ECE_id])
  name        String
  address     String
  description String?
  photo_url   String?
  posts       Job[]
}

model Job {
  id                   String     @id @default(auto()) @map("_id") @db.ObjectId
  center               Center     @relation(fields: [center_id], references: [ECE_id])
  center_id            Int
  date_from            String
  date_to              String
  time                 String
  qualified            Boolean    @default(true)
  relieverIDs          String[]   @db.ObjectId
  declined_relieverIDs String[]
  relievers            Reliever[] @relation(fields: [relieverIDs], references: [id])
  status               Status     @default(OPEN)
}

enum Status {
  OPEN
  FUFILLED
  CANCELLED
}

enum Role {
  RELIEVER
  MANAGER
}
